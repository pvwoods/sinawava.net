!!! 5
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      title
        block title
          = locals.name
      //if lt IE 9
        script(type='text/javascript', src='http://html5shim.googlecode.com/svn/trunk/html5.js')
        script(type='text/javascript', src='http://css3-mediaqueries-js.googlecode.com/svn/trunk/css3-mediaqueries.js')
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='/css/github.css')
      link(rel='stylesheet', href='/css/main.css')
  body
    div#mainContent
    div#contentHolder
        div#title
            a(href=locals.url)= locals.name
        block content
    footer
      div.inner
        block footer
          p &copy; #{ new Date().getFullYear() } #{ locals.owner }
